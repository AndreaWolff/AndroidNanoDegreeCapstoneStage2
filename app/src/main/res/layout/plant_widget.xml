<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_standard_quarter"
            android:layout_marginTop="@dimen/padding_standard_three_quarters"
            android:text="@string/plant_list"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_standard_quarter"
            android:src="@drawable/icon_refresh"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:contentDescription="@string/refresh"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widgetPlantListLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_standard_quarter"
        >

    </LinearLayout>

</LinearLayout>